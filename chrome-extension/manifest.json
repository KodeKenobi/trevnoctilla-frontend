{
  "manifest_version": 3,
  "name": "Trevnoctilla - PDF Editor & File Converter",
  "short_name": "Trevnoctilla",
  "version": "1.0.0",
  "description": "Free PDF editor and file converter. Edit, merge, split, sign PDFs. Convert videos, audio, and images instantly.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Trevnoctilla - Quick Access",
    "default_popup": "popup.html"
  },
  "permissions": [],
  "host_permissions": [],
  "background": {
    "service_worker": "background.js"
  }
}

